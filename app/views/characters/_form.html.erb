<%= form_for @character, html: {role: 'form'} do |f| %>
  <% if @character.errors.any? %>
    <div class='row'>
      <div class='col-md-12'>
        <div id="error_explanation">
          <h2><%= pluralize(@character.errors.count, "error") %> prohibited this character from being saved:</h2>

          <ul>
          <% @character.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :player %>
    <%= f.text_field :player, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :calling %>
    <%= f.text_field :calling, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :nature %>
    <%= f.text_field :nature, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :pantheon %>
    <%= f.text_field :pantheon, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :role %>
    <%= f.text_field :role, class: 'form-control' %>
  </div>
  <hr>
  <h2>Attributes</h2>
  <% Character::ATTRIBUTES.each do |attribute| %>
    <div class="form-group">
      <h3><%= attribute.capitalize %></h3>
      <div class="checkbox">
        <label>
          <%= f.check_box "attr_#{attribute}_favoured".to_sym %>
          Favoured attribute?
        </label>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <%= f.label "attr_#{attribute}".to_sym, "Attribute" %>
          <%= f.select "attr_#{attribute}".to_sym, 1..10, {}, {class: 'form-control'} %>
        </div>
        <div class='col-md-6'>
          <%= f.label "attr_#{attribute}_epic".to_sym, "Epic Attribute" %>
          <%= f.select "attr_#{attribute}_epic".to_sym, 0..10, {}, {class: 'form-control'} %>
        </div>
      </div>
    </div>
  <% end %>
  <hr>
  <div class="form-group">
    <%= f.submit 'Save Character', class: 'btn btn-primary' %>
    <% if f.object.new_record? %>
      <%= link_to 'Back to List', characters_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to 'Cancel', character_path(@character), class: 'btn btn-default' %>
    <% end %>
  </div>
<% end %>
