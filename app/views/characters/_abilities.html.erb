<h3>Abilities</h3>
<div class='row'>
  <div class='col-md-3'>
    <% @character.abilities.each_with_index do |ability, index| %>
      <%= render 'ability', ability: ability %>
      <% if index == 7 || index == 15 || index == 23 %>
        </div>
        <div class='col-md-3'>
      <% end %>
    <% end %>
  </div>
</div>
